<div class="contents">

  <!-- SECTION TEAMS-->
  <div class="col-md-6 quarter part-one">
    <h4 class="p-3">Rejoins la team de ton choix</h4>
    <!-- DIV PERMETTANT L'ALIGNEMENT DES 2 CARDS L'UNE A COTE DE L'AUTRE -->
    <div class="" style="display:flex; align-items: center; justify-content: center;">
      <!-- DIV ENGLOBANT LA CARD DE LA PREMIERE EQUIPE -->
      <div class="col-4 m-4" style="">
        <div class="card">
          <p><%= @team_one.name %></p>
          <div class="mx-auto" style="display:flex;">
          <% @team_one.users.each do |user| %>
            <div class="cercle mx-1">
              <% if user.photo.attached? %>
                <%= cl_image_tag user.photo.key, height: 40, width: 40, crop: :thumb, gravity: :face %>
              <% else %>
                <%= user.first_name %>
              <% end %>
            </div>
          <% end %>
          <% empty_spot = 3 - @team_one.participations.count %>
          <% empty_spot.times do %>
            <div class="empty mx-1"></div>
          <% end %>
          </div>
          <p class="mx-auto"><%= empty_spot %> <%= 'place'.pluralize(empty_spot) %> <%= 'restante'.pluralize(empty_spot) %></p>
          <% if @team_one.can_accept?(current_user) %>
            <%= link_to "Join the team", team_participations_path(@team_one), class: 'btn btn-dark', data: {turbo_method: :post} %>
          <% end %>
        </div>
      </div>
      <!-- DIV ENGLOBANT LA CARD DE LA DEUXIEME EQUIPE -->
      <div class="col-4 m-4">
        <div class="card">
          <p><%= @team_two.name %></p>
          <div class="mx-auto" style="display:flex;">
          <% @team_two.users.each do |user| %>
            <div class="cercle mx-1">
              <% if user.photo.attached? %>
                <%= cl_image_tag user.photo.key, height: 40, width: 40, crop: :thumb, gravity: :face %>
              <% else %>
                <%= user.first_name %>
              <% end %>
            </div>
          <% end %>
          <% empty_spot = 3 - @team_two.participations.count %>
          <% empty_spot.times do %>
            <div class="empty mx-1"></div>
          <% end %>
          </div>
          <p class="mx-auto"><%= empty_spot %> <%= 'place'.pluralize(empty_spot) %> <%= 'restante'.pluralize(empty_spot) %></p>
          <% if @team_two.can_accept?(current_user) %>
            <%= link_to "Join the team", team_participations_path(@team_two), class: 'btn btn-dark', data: {turbo_method: :post} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- SECTION PHOTO DU TERRAIN -->
  <div class="col-md-6 quarter" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= Match::ADDRESSES[@match.address] %>);"></div>

  <!-- SECTION MESSAGE DE L'ORGANISATEUR -->
  <div class="col-md-6 quarter bgball part_three">
    <h4 class="p-3 part-three-text">Message de l'organisateur</h4>

    <!-- MISE EN FORME DU MESSAGE AVEC ASPECT CITATION BOOTSTRAP -->
    <figure class="p-5 m-5">
      <blockquote class="blockquote">
        <p class="part-three-comment"><%= @match.comment %></p>
      </blockquote>
      <figcaption class="blockquote-footer">
        <%= @match.user.first_name %> - <cite title="Source Title">NBA Legend</cite>
      </figcaption>
    </figure>
  </div>

  <!-- SECTION INFOS SUR LE MATCH-->
  <div class="col-md-6 quarter" style="background-color:black; color:white;">
    <h4 class="p-3">Retiens-bien</h4>
    <ul class="p-3 m-3">
      <li><h2 style="text-decoration:none; font-size:bold;"><%= @match.date.strftime('%A %d %B') %> Ã  <%= @match.date.strftime('%H') %>h</h2></li>
      <li>Rendez-vous au <%= @match.address %></li>
      <li>Niveau de jeu <%= @match.category %></li>
    </ul>
  </div>
</div>

